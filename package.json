{
  "name": "dividee-monorepo",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "web": "bun --cwd apps/web dev",
    "mobile": "bun --cwd apps/mobile start",
    "core:build": "bun --cwd packages/core build",
    "web:build": "bun --cwd apps/web build",
    "mobile:build": "bun --cwd apps/mobile build",
    "mobile:prebuild": "bun --cwd apps/mobile prebuild",
    "mobile:eas-build": "bun --cwd apps/mobile eas build",
    "build": "bun run core:build && bun run web:build",
    "clean": "rm -rf **/dist **/.next **/.expo"
  }
} 